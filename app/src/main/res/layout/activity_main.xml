<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.ui.MainActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_hash"
        android:hint="填写种子链接"
        android:maxLines="8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_magnet_task"
        android:text="添加磁力任务"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_parse_torrent"
        android:text="解析种子信息"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:textIsSelectable="true"
            android:hint="种子信息"
            android:id="@+id/tv_torrent_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.core.widget.NestedScrollView>

    <EditText
        android:id="@+id/et_selected_file"
        android:inputType="number"
        android:hint="此处填写种子文件的fileIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="" />

    <androidx.appcompat.widget.AppCompatButton
        android:text="下载种子文件"
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:text="暂停下载任务"
        android:id="@+id/btn_pause_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:text="查询任务列表"
        android:id="@+id/btn_query_task_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:text="查询任务状态"
        android:id="@+id/btn_query_task_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:textIsSelectable="true"
            android:hint="任务状态"
            android:id="@+id/tv_task_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.core.widget.NestedScrollView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_task_list"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>



</LinearLayout>