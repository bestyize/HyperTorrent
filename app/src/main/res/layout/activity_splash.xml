<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_shadow_light"
    tools:context=".main.splash.SplashActivity">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:padding="15dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/bili_pink_medium"
        app:cardCornerRadius="10000dp"
        android:layout_gravity="end|top"
        android:background="@color/gray_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/count_down"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="跳过5"
            android:layout_width="70dp"
            android:layout_height="32dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:background="@color/gray_shadow"
            app:cardElevation="0dp"
            android:padding="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon"
                android:layout_gravity="center"
                android:layout_width="240dp"
                android:layout_height="240dp"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <TextView
        android:layout_marginBottom="60dp"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/bili_pink"
        android:text="@string/app_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
</FrameLayout>