<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/fl_container"
    tools:context="com.thewind.viewer.image.ImageDetailFragment">

    <com.github.chrisbanes.photoview.PhotoView
        android:src="@drawable/user_center_bg"
        android:id="@+id/iv_image_detail"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:padding="15dp"
        android:id="@+id/fl_image_desc_container"
        android:visibility="gone"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_gravity="bottom"
        android:background="#88000000"
        android:minHeight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_image_desc"
            android:textSize="16sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:text="秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海秋天的上海"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_title"
        android:minHeight="60dp"
        android:background="#88000000"
        android:padding="5dp"
        android:gravity="center|bottom"
        android:text="1/9"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</FrameLayout>