<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:minHeight="48dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@color/bili_pink"
        android:id="@+id/iv_torrent_item_icon"
        style="@style/ConstraintLeftCenterAlign"
        android:layout_width="36dp"
        android:layout_height="36dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:paddingStart="10dp"
        android:id="@+id/ll_desc"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_torrent_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_res_title"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:lineHeight="16sp"
            android:text="权力的游戏权力的游戏权力的游戏权力的游戏权力的游戏权力的游戏权力的游戏权力的游戏权力的游戏权力的游戏"
            android:maxEms="16"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_res_desc"
            android:textSize="12sp"
            android:text="第一集 - 2GB"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        app:layout_constraintRight_toRightOf="@+id/ll_desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rb_select"
        android:id="@+id/v_sep"
        android:layout_width="1dp"
        android:layout_height="10dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:padding="5dp"
        android:checked="true"
        android:button="@drawable/ic_selector"
        android:id="@+id/rb_select"
        style="@style/ConstraintRightCenterAlign"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>