<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thewind.community.index.page.CommunityFragment">

    <FrameLayout
        android:id="@+id/fl_top_area"
        android:paddingTop="30dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/cv_search_bg"

            android:background="@color/gray_shadow"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/gray_shadow"
            app:cardCornerRadius="1000dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:padding="6dp"
                android:background="@color/transport"
                android:textSize="18sp"
                android:hint="流浪地球2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:padding="5dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/search"
                android:layout_gravity="end|center"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <androidx.cardview.widget.CardView

        app:cardBackgroundColor="@color/gray_shadow"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/fl_top_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:id="@+id/rv_recommend_topics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>