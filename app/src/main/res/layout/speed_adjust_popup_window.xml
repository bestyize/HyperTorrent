<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    android:background="@color/transport"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/bili_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_speed_3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="3.0倍"
            android:layout_width="60dp"
            android:layout_height="36dp"/>
        <View
            android:background="@color/white"
            android:layout_width="60dp"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/tv_speed_25"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="2.5倍"
            android:layout_width="60dp"
            android:layout_height="36dp"/>
        <View
            android:background="@color/white"
            android:layout_width="60dp"
            android:layout_height="0.5dp"/>


        <TextView
            android:id="@+id/tv_speed_2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="2.0倍"
            android:layout_width="60dp"
            android:layout_height="36dp"/>
        <View
            android:background="@color/white"
            android:layout_width="60dp"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/tv_speed_15"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="1.5倍"
            android:layout_width="60dp"
            android:layout_height="36dp"/>
        <View
            android:background="@color/white"
            android:layout_width="60dp"
            android:layout_height="0.5dp"/>


        <TextView
            android:id="@+id/tv_speed_1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="1.0倍"
            android:layout_width="60dp"
            android:layout_height="36dp"/>
        <View
            android:background="@color/white"
            android:layout_width="60dp"
            android:layout_height="0.5dp"/>


        <TextView
            android:id="@+id/tv_speed_05"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="0.5倍"
            android:layout_width="60dp"
            android:layout_height="36dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
