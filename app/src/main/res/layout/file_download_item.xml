<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/files"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:layout_weight="80"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="生活大爆炸第八集生活大爆炸第八集生活大爆炸第八集生活大爆炸第八集生活大爆炸第八集生活大爆炸第八集"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/ic_down"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:indicatorColor="@color/gold"
            app:trackColor="@color/gray_shadow"
            android:progress="50"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="20.88MB"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_file_size"
                android:textSize="10sp"
                android:text="/120.88MB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <TextView
                android:text="下载中"
                android:textSize="10sp"
                android:id="@+id/tv_download_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="1.88MB/s"
                android:textSize="10sp"
                android:id="@+id/tv_download_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
