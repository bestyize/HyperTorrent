<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/user_center_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="30dp"
                android:id="@+id/iv_setting"
                android:layout_gravity="start|top"
                android:src="@drawable/ic_setting"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:tint="@color/white" />
            <ImageView
                android:layout_marginTop="30dp"
                android:id="@+id/iv_publish"
                android:layout_gravity="end|top"
                android:src="@drawable/send"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:tint="@color/white" />
        </FrameLayout>

        <FrameLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:padding="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10000dp"
                android:layout_width="84dp"
                android:layout_height="84dp">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:padding="20dp"
                    app:cardCornerRadius="10000dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                    <ImageView
                        android:id="@+id/iv_header"
                        android:layout_gravity="start|center"
                        android:src="@drawable/header"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_gravity="left|center"
                android:layout_marginLeft="100dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:text="亦泽同学"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#EEffffff"
                    android:text="无名号:123456"
                    android:textSize="14sp"
                    android:id="@+id/tv_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:text="暂时还没有简介"
            android:gravity="left"
            android:id="@+id/tv_self_desc"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/follow_area"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_following_count"
                    android:text="101"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_following"
                    android:text="关注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_fans_count"
                    android:text="9999+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_fans"
                    android:text="粉丝"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center|end"
                    app:cardCornerRadius="1000dp"
                    app:cardElevation="0dp"
                    android:gravity="center"
                    app:cardBackgroundColor="@color/bili_pink"
                    android:layout_width="80dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="+关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@drawable/top_round_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.tabs.TabLayout
                android:background="@color/transport"
                android:id="@+id/user_ugc_tab"
                app:tabMode="fixed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>



    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</FrameLayout>

